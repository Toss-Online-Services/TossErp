{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=toss_erp;Username=toss_user;Password=development_password;Include Error Detail=true;",
    "ReadOnlyConnection": "Host=localhost;Port=5433;Database=toss_erp;Username=toss_user;Password=development_password;Include Error Detail=true;",
    "PooledConnection": "Host=localhost;Port=6432;Database=toss_erp;Username=toss_user;Password=development_password;Include Error Detail=true;"
  },
  "Database": {
    "ConnectionString": "Host=localhost;Port=5432;Database=toss_erp;Username=toss_user;Password=development_password;Include Error Detail=true;",
    "MaxRetryCount": 3,
    "MaxRetryDelay": "00:00:30",
    "CommandTimeout": 30,
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": false
  },
  "DatabaseOptimization": {
    "Enabled": true,
    "OptimizationInterval": "06:00:00",
    "PerformanceThreshold": 80,
    "OptimizeDuringBusinessHours": false,
    "BusinessHoursStart": 8,
    "BusinessHoursEnd": 18,
    "TimeZone": "UTC"
  },
  "HighAvailability": {
    "PrimaryHost": "postgres-primary",
    "PrimaryPort": 5432,
    "ReplicaHost": "postgres-replica", 
    "ReplicaPort": 5432,
    "FailoverTimeout": "00:00:30",
    "HealthCheckInterval": "00:00:10",
    "AutoFailover": true,
    "ReplicationLagThreshold": "00:00:05"
  },
  "Backup": {
    "Enabled": true,
    "Schedule": "0 2 * * *",
    "RetentionDays": 30,
    "BackupDirectory": "/backups",
    "S3": {
      "Enabled": false,
      "BucketName": "",
      "AccessKey": "",
      "SecretKey": "",
      "Region": "us-east-1"
    },
    "Compression": true,
    "VerifyIntegrity": true,
    "EncryptBackups": false
  },
  "Performance": {
    "Monitoring": {
      "Enabled": true,
      "CollectionInterval": "00:05:00",
      "SlowQueryThreshold": 1000,
      "MaxSlowQueries": 100,
      "IndexRecommendations": true
    },
    "Optimization": {
      "AutoVacuum": true,
      "VacuumThreshold": 0.2,
      "AutoAnalyze": true,
      "AnalyzeThreshold": 0.1,
      "ReindexThreshold": 0.3,
      "StatisticsTarget": 100
    },
    "ConnectionPooling": {
      "MaxConnections": 100,
      "MinConnections": 5,
      "IdleTimeout": "00:10:00",
      "LeakDetectionTime": "00:30:00",
      "ConnectionLifetime": "01:00:00"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.EntityFrameworkCore": "Warning",
        "TossErp.Infrastructure.Database": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/database-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
