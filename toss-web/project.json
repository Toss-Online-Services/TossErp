{
  "name": "toss-web",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "toss-web",
  "targets": {
    "build": {
      "executor": "@nx/nuxt:build",
      "outputs": ["{projectRoot}/.output"],
      "options": {}
    },
    "serve": {
      "executor": "@nx/nuxt:dev",
      "options": {
        "port": 3000
      }
    },
    "preview": {
      "executor": "@nx/nuxt:preview",
      "options": {}
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{projectRoot}/coverage"],
      "options": {
        "config": "{projectRoot}/vitest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["{projectRoot}/**/*.{js,ts,vue}"]
      }
    },
    "e2e": {
      "executor": "@nx/playwright:playwright",
      "outputs": ["{projectRoot}/playwright-report"],
      "options": {
        "config": "{projectRoot}/playwright.config.ts"
      }
    }
  },
  "tags": ["type:app", "scope:frontend"]
}
