{
  "name": "toss-web",
  "version": "1.0.0",
  "description": "TOSS ERP III - Township One-Stop Solution. AI-powered ERP-III platform empowering South African SMMEs (spaza shops, chisa nyamas, rural retailers) with smart business management, collaborative networks for group buying and shared logistics, and embedded AI Copilot for decision support. Built with Nuxt 4, Vue 3, and offline-first PWA technology for low-connectivity township environments.",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "nuxt dev --port 3001",
    "build": "nuxt build",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "prepare": "husky",
    "postinstall": "nuxt prepare",
    "typecheck": "nuxt typecheck",
    "lint": "eslint .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:pos": "playwright test tests/e2e/pos-system.spec.ts",
    "test:e2e:pos:ui": "playwright test tests/e2e/pos-system.spec.ts --ui",
    "test:e2e:pos:debug": "playwright test tests/e2e/pos-system.spec.ts --debug",
    "test:e2e:pos:report": "playwright test tests/e2e/pos-system.spec.ts --reporter=html && playwright show-report",
    "format": "prettier -w .",
    "format:check": "prettier -c ."
  },
