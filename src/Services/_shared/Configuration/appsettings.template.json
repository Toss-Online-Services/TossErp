{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "MassTransit": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Database": {
    "ConnectionString": "Host=localhost;Database=toss_erp;Username=postgres;Password=postgres;",
    "CommandTimeoutSeconds": 30,
    "MaxRetryAttempts": 3,
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": false
  },
  "EventBus": {
    "ConnectionString": "amqp://guest:guest@localhost:5672",
    "UserName": "guest",
    "Password": "guest",
    "RetryCount": 5,
    "SubscriptionClientName": "TossErpService",
    "ExchangePrefix": "toss",
    "EnablePersistence": true,
    "MessageTtlMinutes": 60
  },
  "Jwt": {
    "SigningKey": "REPLACE_WITH_SECURE_KEY_FROM_KEYVAULT",
    "Issuer": "https://toss-erp.local",
    "Audience": "toss-erp-api",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 30,
    "ClockSkewMinutes": 5,
    "RequireHttps": true,
    "ValidateLifetime": true,
    "ValidateIssuer": true,
    "ValidateAudience": true
  },
  "Redis": {
    "ConnectionString": "localhost:6379",
    "Database": 0,
    "KeyPrefix": "toss:",
    "DefaultExpirationMinutes": 60,
    "EnableCompression": true,
    "ConnectTimeoutMs": 5000,
    "SyncTimeoutMs": 5000
  },
  "KeyVault": {
    "Url": ""
  },
  "OpenTelemetry": {
    "ServiceName": "TossErp.Service",
    "ServiceVersion": "1.0.0",
    "OtlpEndpoint": "http://localhost:4317"
  }
}
