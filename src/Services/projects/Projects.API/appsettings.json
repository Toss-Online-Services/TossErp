{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=TossErp_Projects;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true",
    "Redis": "localhost:6379"
  },
  
  "Jwt": {
    "SecretKey": "your-256-bit-secret-key-here-make-it-very-long-and-secure-for-production-use",
    "Issuer": "TossErp.ProjectsAPI",
    "Audience": "TossErp.Clients",
    "ExpirationInMinutes": 60,
    "RefreshTokenExpirationInDays": 7
  },
  
  "Projects": {
    "MaxProjectsPerTenant": 1000,
    "MaxTasksPerProject": 5000,
    "MaxMilestonesPerProject": 100,
    "MaxTeamMembersPerProject": 200,
    "DefaultTaskPriority": "Medium",
    "DefaultProjectStatus": "Planning",
    "AutoArchiveCompletedProjectsAfterDays": 90,
    "MaxAttachmentSizeInMB": 50,
    "AllowedAttachmentTypes": [
      ".pdf", ".doc", ".docx", ".xls", ".xlsx", ".ppt", ".pptx",
      ".txt", ".csv", ".jpg", ".jpeg", ".png", ".gif", ".bmp",
      ".zip", ".rar", ".7z"
    ]
  },
  
  "TimeTracking": {
    "MaxHoursPerDay": 24,
    "MaxHoursPerWeek": 168,
    "MinimumTimeEntryInMinutes": 1,
    "MaxTimeEntryInHours": 24,
    "RequireApprovalForEntries": false,
    "AllowFutureTimeEntries": false,
    "AllowEditingApprovedEntries": false,
    "AutoStopTrackingAfterHours": 12,
    "DefaultBillableStatus": true,
    "TimesheetSubmissionDeadlineDays": 7,
    "ReminderSettings": {
      "EnableReminders": true,
      "DailyReminderTime": "17:00",
      "WeeklyReminderDay": "Friday",
      "WeeklyReminderTime": "16:00"
    }
  },
  
  "Notifications": {
    "EnableRealTimeNotifications": true,
    "NotificationRetentionDays": 30,
    "EmailNotifications": {
      "Enabled": true,
      "Templates": {
        "TaskAssigned": "task-assigned-template",
        "TaskCompleted": "task-completed-template",
        "ProjectStatusChanged": "project-status-changed-template",
        "MilestoneOverdue": "milestone-overdue-template",
        "TimeEntryReminder": "time-entry-reminder-template"
      }
    },
    "SignalR": {
      "ConnectionTimeout": 120,
      "KeepAliveInterval": 30,
      "MaxMessageSize": 32768
    }
  },
  
  "Reports": {
    "MaxExportRecords": 10000,
    "ExportFormats": ["Excel", "PDF", "CSV"],
    "CacheExportForMinutes": 15,
    "DefaultDateRange": 30,
    "TimeZone": "UTC",
    "ExcelSettings": {
      "MaxRowsPerSheet": 1000000,
      "IncludeCharts": true,
      "AutoFitColumns": true
    },
    "PdfSettings": {
      "PageSize": "A4",
      "Orientation": "Portrait",
      "IncludeLogo": true,
      "WatermarkText": ""
    }
  },
  
  "Budget": {
    "DefaultCurrency": "USD",
    "CurrencySymbol": "$",
    "DecimalPlaces": 2,
    "BudgetAlertThresholds": {
      "Warning": 80,
      "Critical": 95
    },
    "AllowNegativeBudgets": false,
    "RequireBudgetApproval": true,
    "BudgetCategories": [
      "Development",
      "Design",
      "Testing",
      "Infrastructure",
      "Marketing",
      "Management",
      "Other"
    ]
  },
  
  "RateLimit": {
    "DefaultRequests": 100,
    "DefaultWindow": 60,
    "ReportsRequests": 10,
    "ReportsWindow": 60,
    "ExportRequests": 5,
    "ExportWindow": 60,
    "TimeTrackingRequests": 50,
    "TimeTrackingWindow": 60
  },
  
  "MultiTenant": {
    "DefaultTenantId": "default",
    "TenantIdHeader": "X-Tenant-ID",
    "TenantIdClaim": "tenant_id",
    "EnableTenantIsolation": true,
    "CacheTenantsForMinutes": 60
  },
  
  "HealthChecks": {
    "Enabled": true,
    "DatabaseTimeout": 30,
    "ExternalServiceTimeout": 10,
    "MemoryThresholdMB": 1024,
    "DiskSpaceThresholdGB": 5
  },
  
  "BackgroundServices": {
    "ProjectStatusUpdate": {
      "Enabled": true,
      "IntervalInMinutes": 15,
      "BatchSize": 100
    },
    "TimeEntryReminder": {
      "Enabled": true,
      "IntervalInHours": 1,
      "ReminderHour": 17,
      "WeekendReminders": false
    },
    "DataCleanup": {
      "Enabled": true,
      "IntervalInHours": 24,
      "CleanupHour": 2,
      "RetentionDays": {
        "DeletedProjects": 30,
        "DeletedTasks": 30,
        "TimeEntryHistory": 365,
        "NotificationHistory": 90
      }
    }
  },
  
  "Integration": {
    "Gateway": {
      "BaseUrl": "http://localhost:7000",
      "ApiKey": "gateway-api-key",
      "Timeout": 30
    },
    "Setup": {
      "BaseUrl": "http://localhost:5001",
      "ApiKey": "setup-api-key",
      "Timeout": 30
    },
    "Accounts": {
      "BaseUrl": "http://localhost:5003",
      "ApiKey": "accounts-api-key",
      "Timeout": 30
    },
    "Assets": {
      "BaseUrl": "http://localhost:5004",
      "ApiKey": "assets-api-key",
      "Timeout": 30
    }
  },
  
  "Caching": {
    "Redis": {
      "Enabled": false,
      "ConnectionString": "localhost:6379",
      "DatabaseId": 2,
      "KeyPrefix": "projects:",
      "DefaultExpirationMinutes": 30
    },
    "InMemory": {
      "Enabled": true,
      "DefaultExpirationMinutes": 15,
      "MaxSize": 1000
    }
  },
  
  "Security": {
    "EnableApiKeyAuthentication": false,
    "ApiKeys": [],
    "Cors": {
      "AllowedOrigins": [
        "http://localhost:3000",
        "http://localhost:5173",
        "http://localhost:8080",
        "https://localhost:7000",
        "http://localhost:7000"
      ],
      "AllowCredentials": true,
      "ExposedHeaders": [
        "X-Total-Count",
        "X-Page",
        "X-Page-Size", 
        "X-Total-Pages"
      ]
    },
    "RateLimiting": {
      "EnableIpWhitelist": false,
      "WhitelistedIps": [],
      "EnableUserBasedLimiting": true
    }
  }
}
