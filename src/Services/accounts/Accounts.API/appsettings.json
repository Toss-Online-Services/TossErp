{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=TossErp_Accounts;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true",
    "Redis": ""
  },
  "Jwt": {
    "Key": "YourSuperSecretJwtKeyThatShouldBeAtLeast256BitsLong",
    "Issuer": "TossErp.Accounts.API",
    "Audience": "TossErp.Clients",
    "ExpirationInMinutes": 60
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/accounts-api-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "BlobStorage": {
    "ConnectionString": "UseDevelopmentStorage=true",
    "ContainerName": "accounts-files"
  },
  "AccountingSettings": {
    "FiscalYearStart": "01-01",
    "BaseCurrency": "USD",
    "DecimalPlaces": 2,
    "DefaultAccountCodeLength": 6,
    "AccountCodeFormat": "{0:000000}",
    "EnableMultiCurrency": false,
    "RequireJournalEntryApproval": true,
    "AutoGenerateAccountCodes": true,
    "DefaultTaxRate": 0.0
  },
  "ReportingSettings": {
    "EnableRealTimeReports": true,
    "MaxReportRows": 10000,
    "ReportCacheMinutes": 30,
    "DefaultDateFormat": "yyyy-MM-dd",
    "EnableReportScheduling": true,
    "MaxExportSize": "50MB"
  },
  "JournalSettings": {
    "RequireBalancedEntries": true,
    "AutoAssignJournalNumbers": true,
    "JournalNumberFormat": "JE-{0:000000}",
    "EnableJournalTemplates": true,
    "RequireEntryApproval": false,
    "MaxLineItemsPerEntry": 100
  },
  "ReconciliationSettings": {
    "EnableAutoReconciliation": false,
    "ReconciliationToleranceAmount": 0.01,
    "RequireReconciliationApproval": true,
    "AutoCreateReconciliationItems": false,
    "ReconciliationFrequencyDays": 30
  },
  "BudgetSettings": {
    "EnableBudgeting": true,
    "BudgetPeriods": [ "Monthly", "Quarterly", "Yearly" ],
    "DefaultBudgetPeriod": "Monthly",
    "EnableBudgetAlerts": true,
    "BudgetVarianceThreshold": 10.0
  },
  "AllowedHosts": "*"
}
