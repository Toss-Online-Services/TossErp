{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=TossErp_Accounts_Dev;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true",
    "Redis": "localhost:6379"
  },
  "Jwt": {
    "Key": "YourSuperSecretJwtKeyForDevelopmentThatShouldBeAtLeast256BitsLong",
    "Issuer": "TossErp.Accounts.API.Dev",
    "Audience": "TossErp.Clients.Dev",
    "ExpirationInMinutes": 120
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Debug",
        "System": "Information"
      }
    }
  },
  "BlobStorage": {
    "ConnectionString": "UseDevelopmentStorage=true",
    "ContainerName": "accounts-files-dev"
  },
  "AccountingSettings": {
    "RequireJournalEntryApproval": false,
    "DefaultTaxRate": 8.5,
    "AccountCodeFormat": "DEV-{0:000000}"
  },
  "ReportingSettings": {
    "ReportCacheMinutes": 5,
    "MaxExportSize": "100MB"
  },
  "JournalSettings": {
    "RequireEntryApproval": false,
    "JournalNumberFormat": "DEV-JE-{0:000000}"
  },
  "ReconciliationSettings": {
    "RequireReconciliationApproval": false,
    "ReconciliationFrequencyDays": 7
  },
  "AllowedHosts": "*"
}
