{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=TossErp_Assets_Dev;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true",
    "Redis": "localhost:6379"
  },
  "Jwt": {
    "Key": "YourSuperSecretJwtKeyForDevelopmentThatShouldBeAtLeast256BitsLong",
    "Issuer": "TossErp.Assets.API.Dev",
    "Audience": "TossErp.Clients.Dev",
    "ExpirationInMinutes": 120
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Debug",
        "System": "Information"
      }
    }
  },
  "BlobStorage": {
    "ConnectionString": "UseDevelopmentStorage=true",
    "ContainerName": "assets-files-dev"
  },
  "AssetSettings": {
    "EnableAssetTracking": true,
    "AssetNumberFormat": "DEV-AST-{0:0000000}",
    "MaxFileUploadSizeMB": 100
  },
  "MaintenanceSettings": {
    "EnablePreventiveMaintenance": true,
    "DefaultReminderDays": 3,
    "OverdueEscalationDays": 7
  },
  "AllowedHosts": "*"
}
