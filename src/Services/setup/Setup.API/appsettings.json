{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=TossErp_Setup;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true",
    "Redis": ""
  },
  "Jwt": {
    "Key": "YourSuperSecretJwtKeyThatShouldBeAtLeast256BitsLong",
    "Issuer": "TossErp.Setup.API",
    "Audience": "TossErp.Clients",
    "ExpirationInMinutes": 60
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/setup-api-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "EmailSettings": {
    "SmtpServer": "smtp.sendgrid.net",
    "SmtpPort": 587,
    "EnableSsl": true,
    "FromEmail": "noreply@tosserp.com",
    "FromName": "TOSS ERP System"
  },
  "BlobStorage": {
    "ConnectionString": "UseDevelopmentStorage=true",
    "ContainerName": "setup-files"
  },
  "TenantSettings": {
    "DefaultSubscriptionPlan": "Basic",
    "MaxTenantsPerHost": 1000,
    "DefaultQuotaLimits": {
      "MaxUsers": 100,
      "MaxStorageGB": 10,
      "MaxApiCallsPerMonth": 100000
    }
  },
  "NotificationSettings": {
    "DefaultRetentionDays": 90,
    "MaxNotificationsPerUser": 1000,
    "EnableEmailNotifications": true,
    "EnableSmsNotifications": false,
    "EnablePushNotifications": true
  },
  "AuditSettings": {
    "RetentionPeriodDays": 2555,
    "EnableRealTimeAuditing": true,
    "CompressOldEntries": true,
    "ArchiveAfterDays": 365
  },
  "SystemSettings": {
    "Environment": "Production",
    "EnableMaintenanceMode": false,
    "MaintenanceMessage": "System is under maintenance. Please try again later.",
    "DefaultTimeZone": "UTC",
    "SupportedLanguages": [ "en-US", "es-ES", "fr-FR", "de-DE" ]
  },
  "AllowedHosts": "*"
}
