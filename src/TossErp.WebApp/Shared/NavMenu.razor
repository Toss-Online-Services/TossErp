@using MudBlazor

<MudNavMenu Class="mud-width-full">
    <div class="d-flex flex-column align-center py-6">
        <MudAvatar Color="Color.Primary" Style="height: 80px; width: 80px;">
            <MudImage Src="_content/TossErp.WebApp/images/logo.png" Alt="TOSS ERP" />
        </MudAvatar>
        <MudText Typo="Typo.subtitle1" Class="mt-4">TOSS ERP</MudText>
        <MudText Typo="Typo.caption" Color="Color.Primary">Version 1.0</MudText>
    </div>

    <MudDivider Class="mb-4"/>
    
    <MudText Typo="Typo.overline" Class="ml-4 mb-4">CORE</MudText>
    
    <MudNavLink Href="/dashboard" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard">
        Dashboard
    </MudNavLink>
    
    <MudNavLink Href="/pos" Icon="@Icons.Material.Filled.ShoppingCart">
        Point of Sale
    </MudNavLink>

    <MudText Typo="Typo.overline" Class="ml-4 my-4">MANAGEMENT</MudText>
    
    <MudNavGroup Title="Inventory" Icon="@Icons.Material.Filled.Inventory" Expanded="true">
        <MudNavLink Href="/items" Icon="@Icons.Material.Filled.Inventory2">
            Items
        </MudNavLink>
        <MudNavLink Href="/categories" Icon="@Icons.Material.Filled.Category">
            Categories
        </MudNavLink>
        <MudNavLink Href="/brands" Icon="@Icons.Material.Filled.BrandingWatermark">
            Brands
        </MudNavLink>
        <MudNavLink Href="/stock" Icon="@Icons.Material.Filled.Store">
            Stock Levels
        </MudNavLink>
    </MudNavGroup>
    
    <MudNavGroup Title="Sales" Icon="@Icons.Material.Filled.PointOfSale" Expanded="false">
        <MudNavLink Href="/sales" Icon="@Icons.Material.Filled.Receipt">
            Sales History
        </MudNavLink>
        <MudNavLink Href="/customers" Icon="@Icons.Material.Filled.PeopleAlt">
            Customers
        </MudNavLink>
        <MudNavLink Href="/suppliers" Icon="@Icons.Material.Filled.LocalShipping">
            Suppliers
        </MudNavLink>
    </MudNavGroup>

    <MudText Typo="Typo.overline" Class="ml-4 my-4">INSIGHTS</MudText>
    
    <MudNavGroup Title="Reports" Icon="@Icons.Material.Filled.Assessment" Expanded="false">
        <MudNavLink Href="/sales-reports" Icon="@Icons.Material.Filled.BarChart">
            Sales Analytics
        </MudNavLink>
        <MudNavLink Href="/inventory-reports" Icon="@Icons.Material.Filled.PieChart">
            Inventory Analysis
        </MudNavLink>
        <MudNavLink Href="/financial-reports" Icon="@Icons.Material.Filled.AccountBalance">
            Financial Reports
        </MudNavLink>
    </MudNavGroup>

    <MudText Typo="Typo.overline" Class="ml-4 my-4">SYSTEM</MudText>
    
    <MudNavGroup Title="Administration" Icon="@Icons.Material.Filled.AdminPanelSettings" Expanded="false">
        <MudNavLink Href="/users" Icon="@Icons.Material.Filled.Person">
            Users
        </MudNavLink>
        <MudNavLink Href="/roles" Icon="@Icons.Material.Filled.Security">
            Roles
        </MudNavLink>
    </MudNavGroup>
    
    <MudNavGroup Title="Settings" Icon="@Icons.Material.Filled.Settings" Expanded="false">
        <MudNavLink Href="/company" Icon="@Icons.Material.Filled.Business">
            Company Profile
        </MudNavLink>
        <MudNavLink Href="/system" Icon="@Icons.Material.Filled.Computer">
            System Settings
        </MudNavLink>
        <MudNavLink Icon="@Icons.Material.Filled.Translate">
            Language Settings
        </MudNavLink>
    </MudNavGroup>

    <MudDivider Class="my-4"/>
    
    <MudNavLink Href="https://docs.tosserp.com" Target="_blank" Icon="@Icons.Material.Filled.Book">
        Documentation
    </MudNavLink>
    
    <MudNavLink Href="https://support.tosserp.com" Target="_blank" Icon="@Icons.Material.Filled.SupportAgent">
        Support
    </MudNavLink>
</MudNavMenu> 