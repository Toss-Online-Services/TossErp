@using MudBlazor
@using TossErp.WebApp.DTOs

<MudDialog>
    <DialogContent>
        <MudContainer Style="max-height: 500px; overflow-y: auto">
            <MudForm @ref="_form" @bind-IsValid="@_isValid">
                <MudGrid>
                    <MudItem xs="12">
                        <MudText Typo="Typo.subtitle1" Class="mb-4">Customer Information</MudText>
                    </MudItem>
                    <MudItem xs="12" md="6">
                        <MudTextField @bind-Value="customer.Name" Label="Full Name" Required="true" Variant="Variant.Outlined" />
                    </MudItem>
                    <MudItem xs="12" md="6">
                        <MudTextField @bind-Value="customer.Email" Label="Email" Required="true" Variant="Variant.Outlined" />
                    </MudItem>
                    <MudItem xs="12" md="6">
                        <MudTextField @bind-Value="customer.Phone" Label="Phone" Variant="Variant.Outlined" />
                    </MudItem>
                    <MudItem xs="12" md="6">
                        <MudTextField @bind-Value="customer.Company" Label="Company" Variant="Variant.Outlined" />
                    </MudItem>
                    <MudItem xs="12">
                        <MudTextField @bind-Value="customer.Address" Label="Address" Variant="Variant.Outlined" />
                    </MudItem>
                    <MudItem xs="12" md="6">
                        <MudCheckBox T="bool" @bind-Value="customer.IsActive" Label="Active Customer" />
                    </MudItem>
                </MudGrid>
            </MudForm>
        </MudContainer>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit" Disabled="!_isValid">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public CustomerDto? Customer { get; set; }
    private MudForm _form = default!;
    private bool _isValid;
    private CustomerDto customer = new();

    protected override void OnInitialized()
    {
        if (Customer != null)
        {
            customer = new CustomerDto
            {
                Id = Customer.Id,
                Name = Customer.Name,
                Email = Customer.Email,
                Phone = Customer.Phone,
                Address = Customer.Address,
                Company = Customer.Company,
                IsActive = Customer.IsActive,
                TotalOrders = Customer.TotalOrders,
                TotalSpent = Customer.TotalSpent,
                LastOrderDate = Customer.LastOrderDate,
                CreatedDate = Customer.CreatedDate
            };
        }
    }

    private async Task Submit()
    {
        await _form.Validate();
        if (_form.IsValid)
        {
            MudDialog.Close(DialogResult.Ok(customer));
        }
    }
    private void Cancel() => MudDialog.Cancel();
} 