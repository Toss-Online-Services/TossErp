    private bool FilterFunc(CustomerDto customer)
    {
        if (!string.IsNullOrWhiteSpace(searchString))
        {
            if (!customer.Name.Contains(searchString, StringComparison.OrdinalIgnoreCase) &&
                !customer.Email.Contains(searchString, StringComparison.OrdinalIgnoreCase) &&
                !customer.Phone.Contains(searchString, StringComparison.OrdinalIgnoreCase))
                return false;
        }
        
        if (selectedStatus != CustomerStatus.All && customer.IsActive != (selectedStatus == CustomerStatus.Active))
            return false;
        
        return true;
    }

    private void OpenCreateDialog()
    {
        editingCustomer = new CustomerDto { Id = 0, IsActive = true, CreatedDate = DateTime.Now };
        dialogVisible = true;
    }

    private void OpenEditDialog(CustomerDto customer)
    {
        editingCustomer = new CustomerDto
        {
            Id = customer.Id,
            Name = customer.Name,
            Email = customer.Email,
            Phone = customer.Phone,
            Address = customer.Address,
            Company = customer.Company,
            IsActive = customer.IsActive,
            CreatedDate = customer.CreatedDate
        };
        dialogVisible = true;
    }

    private async Task SaveCustomer()
    {
        try
        {
            if (editingCustomer.Id == 0)
            {
                // Create new customer
                editingCustomer.Id = customers.Max(c => c.Id) + 1;
                editingCustomer.TotalOrders = 0;
                editingCustomer.TotalSpent = 0;
                customers.Add(editingCustomer);
                Snackbar.Add("Customer added successfully", Severity.Success);
            }
            else
            {
                // Update existing customer
                var existingCustomer = customers.FirstOrDefault(c => c.Id == editingCustomer.Id);
                if (existingCustomer != null)
                {
                    existingCustomer.Name = editingCustomer.Name;
                    existingCustomer.Email = editingCustomer.Email;
                    existingCustomer.Phone = editingCustomer.Phone;
                    existingCustomer.Address = editingCustomer.Address;
                    existingCustomer.Company = editingCustomer.Company;
                    existingCustomer.IsActive = editingCustomer.IsActive;
                }
                Snackbar.Add("Customer updated successfully", Severity.Success);
            }
            
            dialogVisible = false;
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error saving customer: {ex.Message}", Severity.Error);
        }
    }

    private async Task DeleteCustomer(int customerId)
    {
        try
        {
            var customer = customers.FirstOrDefault(c => c.Id == customerId);
            if (customer != null)
            {
                // Check if customer has orders
                if (customer.TotalOrders > 0)
                {
                    Snackbar.Add("Cannot delete customer with orders", Severity.Warning);
                    return;
                }
                
                customers.Remove(customer);
                Snackbar.Add("Customer deleted successfully", Severity.Success);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error deleting customer: {ex.Message}", Severity.Error);
        }
    }

