                    Items = new List<SaleItemDto>
                    {
                        new() { ItemName = "Samsung Galaxy S24", Quantity = 1, UnitPrice = 899.99m }
                    }
                }
            };
            filteredSales = sales.ToList();
        }
        catch
        {
            // Handle error
        }
        finally
        {
            loading = false;
        }
    }

    private void FilterSales()
    {
        IEnumerable<SaleDto> query = sales;

        if (startDate.HasValue)
            query = query.Where(s => s.SaleDate >= startDate.Value);

        if (endDate.HasValue)
            query = query.Where(s => s.SaleDate <= endDate.Value);

        if (selectedStatus != SaleStatus.All)
            query = query.Where(s => s.Status == selectedStatus.ToString());

        filteredSales = query.ToList();
        StateHasChanged();
    }

    private void ViewSaleDetails(SaleDto sale)
    {
        selectedSale = sale;
