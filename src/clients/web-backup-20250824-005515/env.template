# Web Client Environment Configuration
# Copy this file to .env and fill in your actual values

# API Configuration
NUXT_PUBLIC_API_URL=http://localhost:8080/api
NUXT_PUBLIC_GATEWAY_URL=http://localhost:8080

# Development Settings
NODE_ENV=development
NUXT_USE_MOCK_API=false

# API Timeouts
API_TIMEOUT=30000

# Feature Flags
ENABLE_REAL_TIME_UPDATES=true
ENABLE_OFFLINE_SUPPORT=true
ENABLE_ANALYTICS=true

# Authentication
AUTH_STORAGE_KEY=toss_web_auth
REFRESH_STORAGE_KEY=toss_web_refresh
