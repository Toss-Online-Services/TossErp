{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "inventory": {
        "ClusterId": "inventory",
        "Match": { "Path": "/services/inventory/{**catchall}" },
        "Transforms": [ { "PathPattern": "/{**catchall}" } ]
      },
      "sales": {
        "ClusterId": "sales",
        "Match": { "Path": "/services/sales/{**catchall}" },
        "Transforms": [ { "PathPattern": "/{**catchall}" } ]
      },
      "collaboration": {
        "ClusterId": "collaboration",
        "Match": { "Path": "/services/collaboration/{**catchall}" },
        "Transforms": [ { "PathPattern": "/{**catchall}" } ]
      }
    },
    "Clusters": {
      "inventory": {
        "Destinations": {
          "d1": { "Address": "http://inventory:8080/" }
        }
      },
      "sales": {
        "Destinations": {
          "d1": { "Address": "http://sales:8080/" }
        }
      },
      "collaboration": {
        "Destinations": {
          "d1": { "Address": "http://collaboration:8080/" }
        }
      }
    }
  }
}



