{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "stock-api": {
        "ClusterId": "stock-cluster",
        "Match": { "Path": "/api/stock/{**catchall}" },
        "Transforms": [ { "PathPattern": "/{**catchall}" } ]
      },
      "inventory": {
        "ClusterId": "inventory",
        "Match": { "Path": "/services/inventory/{**catchall}" },
        "Transforms": [ { "PathPattern": "/{**catchall}" } ]
      },
      "sales": {
        "ClusterId": "sales",
        "Match": { "Path": "/services/sales/{**catchall}" },
        "Transforms": [ { "PathPattern": "/{**catchall}" } ]
      },
      "collaboration": {
        "ClusterId": "collaboration",
        "Match": { "Path": "/services/collaboration/{**catchall}" },
        "Transforms": [ { "PathPattern": "/{**catchall}" } ]
      },
      "crm-api": {
        "ClusterId": "crm-cluster",
        "Match": { "Path": "/api/crm/{**catchall}" },
        "Transforms": [ { "PathPattern": "/api/{**catchall}" } ]
      }
    },
    "Clusters": {
      "stock-cluster": {
        "Destinations": {
          "stock-api": { "Address": "http://stock-api:80" }
        }
      },
      "inventory": {
        "Destinations": {
          "d1": { "Address": "http://inventory:8080/" }
        }
      },
      "sales": {
        "Destinations": {
          "d1": { "Address": "http://sales:8080/" }
        }
      },
      "collaboration": {
        "Destinations": {
          "d1": { "Address": "http://collaboration:8080/" }
        }
      },
      "crm-cluster": {
        "Destinations": {
          "crm-api": { "Address": "http://localhost:5002/" }
        }
      }
    }
  }
}



