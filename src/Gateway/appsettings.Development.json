{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "stock-items": {
        "ClusterId": "stock-api",
        "Match": { "Path": "/api/stock/{**catchall}" },
        "Transforms": [ { "PathPattern": "/api/Items/{**catchall}" } ]
      },
      "stock-operations": {
        "ClusterId": "stock-api", 
        "Match": { "Path": "/api/stock/adjustments" },
        "Transforms": [ { "PathPattern": "/api/StockOperations/adjust" } ]
      },
      "stock-movements": {
        "ClusterId": "stock-api",
        "Match": { "Path": "/api/stock/movements" },
        "Transforms": [ { "PathPattern": "/api/StockLedger" } ]
      },
      "inventory": {
        "ClusterId": "inventory",
        "Match": { "Path": "/services/inventory/{**catchall}" },
        "Transforms": [ { "PathPattern": "/{**catchall}" } ]
      }
    },
    "Clusters": {
      "stock-api": {
        "Destinations": {
          "local": { "Address": "http://localhost:5000/" }
        }
      },
      "inventory": {
        "Destinations": {
          "local": { "Address": "http://localhost:5001/" }
        }
      }
    }
  }
}


